<project name="LiveResultsClient" default="default" basedir=".">
    <description>Builds, tests, and runs the project LiveResultsClient.</description>
    <import file="nbproject/build-impl.xml"/>
	<taskdef name="bundleapp"
             classname="com.oracle.appbundler.AppBundlerTask"   
             classpath="lib/appbundler-1.0.jar" />

    <target name="bundle-LiveResultsClient">
        <bundleapp outputdirectory="dist"
            name="LiveResultsClient"
            displayname="LiveResults Client"
            identifier="giu.MainWindow"
            mainclassname="giu.MainWindow">
            <classpath file="dist/LiveResultsClient.jar" />
        </bundleapp>
    </target>
</project>
